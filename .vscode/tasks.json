{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install zod package",
			"type": "shell",
			"command": "pnpm add zod",
			"args": []
		},
		{
			"label": "Install zod (npm fallback)",
			"type": "shell",
			"command": "npm",
			"args": [
				"i",
				"zod"
			],
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Typecheck",
			"type": "shell",
			"command": "npx",
			"args": [
				"tsc",
				"-p",
				"tsconfig.json",
				"--noEmit"
			]
		}
	]
}